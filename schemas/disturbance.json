{
  "name": "disturbance",
  "path": "disturbance.csv",
  "schema": {
    "fields": [
      {
        "name": "company",
        "title": "Company",
        "type": "string",
        "raises": "error",
        "constraints": {
          "required": true,
          "pattern": "/^(AINS|GOA|APLY|ALPC|ANC|BLUE|CFPL|CFS|DAIS|FOFP|MDFP|MWWC|SLPC|SPRA|SUND|SFPI|HLFP|TOLK|TOSL|UOA|VAND|WFML|WYGP|WYPM|UNKN|HPFP)$/"
        }
      },
      {
        "name": "company_plot_number",
        "type": "string",
        "raises": "error",
        "constraints": {
          "required": true,
          "maxLength": 15
        }
      },
      {
        "name": "disturbance_number",
        "type": "integer",
        "raises": "error",
        "constraints": {
          "required": true,
          "minimum": 1,
          "maximum": 12
        }
      },
      {
        "name": "disturbance_code",
        "type": "string",
        "raises": "error",
        "constraints": {
          "required": true,
          "pattern": "/^(BU|DF|MI|MU|NDD|NDW|DC|HL|MLU|NDC|NDI|DA)$/"
        }
      },
      {
        "name": "disturbance_year",
        "type": "integer",
        "raises": "warning",
        "constraints": {
          "required": true,
          "minimum": 1900,
          "maximum": 2050
        }
      },
      {
        "name": "disturbance_month",
        "type": "integer",
        "raises": "warning",
        "constraints": {
          "required": true,
          "minimum": 1,
          "maximum": 12
        }
      },
      {
        "name": "disturbance_day",
        "type": "integer",
        "raises": "warning",
        "constraints": {
          "required": true,
          "minimum": 1,
          "maximum": 31
        }
      },
      {
        "name": "disturbance_comment",
        "type": "string",
        "constraints":{
          "maxLength": 250
        }
      }
    ]
  },
  "primaryKey": [
    "company",
    "company_plot_number",
    "disturbance_number"
  ],
  "foreignKeys": [
    {
      "fields": [
        "company",
        "company_plot_number"
      ],
      "reference": {
        "resource": "plot",
        "fields": [
          "company",
          "company_plot_number"
        ]
      }
    }
  ]
}
